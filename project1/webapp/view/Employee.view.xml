	<Page id="page" class="sapUiResponsivePadding--header sapUiResponsiveMargin--header" title="{i18n>title}">
        <headerContent>
            <ObjectHeader  binding="" title="" number="{
			parts:[{path:'Price'},{path:'CurrencyCode'}],
			type: 'sap.ui.model.type.Currency',
			formatOptions: {showMeasure: false}
		}" class="">

            </ObjectHeader>
            <ToolbarSpacer/>
            <Button press="onButtonPress" type="Default" text="Submit For Approval"></Button>
            <Button press="onButtonPress" type="Default" text="Save"></Button>
            

        </headerContent>

        <uxap:ObjectPageLayout >
            <uxap:sections>
                <uxap:ObjectPageSection >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection id="EmployeeTimesheettable" title="">
                        </uxap:ObjectPageSubSection>
                        <uxap:ObjectPageSubSection title="Time Entry Details">
                            <Table id="idTimeTable" sticky="HeaderToolbar,ColumnHeaders" growing="true" growingThreshold="100" inset="false" items="{path: '/TimeEntries'}" class="sapFDynamicPageAlignContent" width="auto" visible="true">
                                <headerToolbar>
                                    <Toolbar>
                                        <Title id="Text" text="Time Entry Details"/>
                                        <ToolbarSpacer/>
                                        <Button type="Emphasized" icon="sap-icon://refresh" tooltip="Refresh" press="tableRefresh"/>
                                    </Toolbar>
                                </headerToolbar>
                                <columns>
                                    <Column demandPopin="true" minScreenWidth="Tablet" width="auto" hAlign="Left">
                                        <Text tooltip=" Date" text="Date"/>
                                    </Column>
                                    <Column demandPopin="true" minScreenWidth="Tablet" width="10rem" hAlign="Left">
                                        <Text tooltip="Project" text="Project"/>
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true" width="20rem" hAlign="Left">
                                        <Text tooltip="Activity" text="Activity"/>
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true" width="10rem" hAlign="Left">
                                        <Text tooltip="Time" text="Time"/>
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true" width="10rem" hAlign="Left">
                                        <Text tooltip="Comments" text="Comments"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{workDate}"/>
                                            <Text text="{project_ID}"/>
                                            <Text text="{activity}"/>
                                            <Text text="{hoursWorked}"/>
                                             <Text text="{comments}"/>

                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </uxap:ObjectPageSubSection>

                    </uxap:subSections>
                </uxap:ObjectPageSection>

            </uxap:sections>
        </uxap:ObjectPageLayout>

        	


    </Page>
</mvc:View>